{% extends "base.html.twig" %}
{% block body %}
	<div class="container">
		<h1 class="text-center m-3">Tous les pokemons du type : {{type}}</h1>
		<div class="card mb-3">
			<div class="card-body text-center d-flex justify-content-center">
				<ul class="list-group ">
					{% for entity in pokemon %}
					<li class="list-group-item bg-light m-2"style="width: 10rem;"><a href="{{ path('name', { 'name' : entity.name })}}" class="text-decoration-none text-dark">{{ entity.name }}</a></li>
					{%endfor%}
				</ul>
			</div>
		</div>
	</div>
{% endblock %}
